<section class="content">
  <div class="row py-3">
    <div class="col-md-12">
      <div class="card card-secondary">
        <div class="card-header mb-3">
          <h3 class="card-title">ADD PIC</h3>
        </div>

        <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
          <div class="alert alert-danger">
            <ul class="mb-0">
              <% errors.forEach(error => { %>
                <li><%= error.msg %></li>
              <% }) %>
            </ul>
          </div>
        <% } %>

        <form action="/pic/store" method="POST" enctype="multipart/form-data">
          <div class="card-body">
            <div class="row">

              <div class="col-md-4 d-flex flex-column align-items-center">
                <img id="previewImage" src="/<%= oldData.image || 'public/images/default.png' %>" alt="User Image" class="img-fluid rounded mb-3" style="max-height: 250px; object-fit: cover;">

                <div class="form-group w-100 px-3">
                  <label for="image">Upload New Image</label>
                  <div class="input-group">
                    <div class="custom-file">
                      <input 
                        type="file" 
                        class="custom-file-input" 
                        id="image" 
                        name="image"
                        accept="image/*"
                        required
                      >
                      <label class="custom-file-label" for="image">Choose file</label>
                    </div>
                  </div>
                </div>
              </div>

              <div class="col-md-8 mt-2">
                <div class="row">

                  <div class="form-group col-md-12">
                    <label for="empno">Empno</label>
                    <input type="text" id="empno" name="empno" class="form-control" placeholder="empno..." value="<%= oldData.empno || '' %>" minlength="5" maxlength="5" required>
                  </div>

                  <div class="form-group col-md-12">
                    <label for="vname">Name</label>
                    <input type="text" id="vname" name="vname" class="form-control" placeholder="Full Name..." value="<%= oldData.vname || '' %>" minlength="6" maxlength="255" required>
                  </div>

                  <div class="form-group col-md-12">
                    <label for="sex">Sex</label>
                    <select id="sex" name="sex" class="form-control custom-select" required>
                      <option disabled selected>Select one</option>
                      <option value="M" <%= oldData.sex === 'M' ? 'selected' : '' %>>Male</option>
                      <option value="F" <%= oldData.sex === 'F' ? 'selected' : '' %>>Female</option>
                    </select>
                  </div>

                  <div class="form-group col-md-12">
                    <label for="inputDept">Department</label>
                    <select id="inputDept" name="dept_id" class="form-control custom-select" required>
                      <option disabled selected>Select one</option>
                      <% departments.forEach(dept => { %>
                        <% if (dept.dept_code != '700') { %>
                          <option value="<%= dept.id %>" <%= oldData.dept_id === dept.id ? 'selected' : '' %>>
                            <%= dept.dept_code %> - <%= dept.dept_desc %>
                          </option>
                        <% } %>
                      <% }) %>
                    </select>
                  </div>
                </div>

                <div class="col-12 py-4">
                  <button type="submit" class="btn btn-success float-right">Submit</button>
                </div>
              </div>

            </div>
          </div>
        </form>

      </div>
    </div>
  </div>
</section>

<% if (status && status[0] === "success") { %>
  <script>
    Swal.fire({
      title: 'Success!',
      text: "<%= msg[0] %>",
      icon: 'success',
      showConfirmButton: false,
      timer: 3000,
      timerProgressBar: true
    });
  </script>
<% } %>

<% if (status && status[0] === "failed") { %>
  <script>
    Swal.fire({
      title: 'Failed!',
      text: "<%= msg[0] %>",
      icon: 'error',
      showConfirmButton: false,
      timer: 3000,
      timerProgressBar: true
    });
  </script>
<% } %>

<script>
  document.getElementById('image').addEventListener('change', function (event) {
    const [file] = event.target.files;
    if (file) {
      const preview = document.getElementById('previewImage');
      preview.src = URL.createObjectURL(file);
    }
  });
</script>
