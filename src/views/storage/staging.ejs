<script>
  document.addEventListener("DOMContentLoaded", () => {
    const detailButtons = document.querySelectorAll(".logs-btn");
    const tableBody = document.getElementById("logTableBody");

    detailButtons.forEach(button => {
      button.addEventListener("click", () => {
        const stagingId = button.getAttribute("data-id");

        tableBody.innerHTML = `<tr><td colspan="5" class="text-center">Loading data...</td></tr>`;

        fetch(`/api/stglog?staging_id=${stagingId}`)
          .then(res => res.json())
          .then(data => {
            if (data.length === 0) {
              tableBody.innerHTML = `<tr><td colspan="6" class="text-center">Data not found</td></tr>`;
              return;
            }

            let html = "";
            data.forEach((log, i) => {
                const detailQty = log.kind === 'I'
                  ? `<span class="text-success">In ${log.iqty} Qty</span>`
                  : `<span class="text-muted">Out ${log.oqty} Qty</span>`;

              html += `
                <tr>
                  <td>${i + 1}</td>
                  <td>${new Date(log.created_at).toLocaleDateString()}</td>
                  <td>${log.storeh || '-'}</td>
                  <td>${log.kind || '-'}</td>
                  <td>${log.iqty || log.oqty || '-'}</td>
                  <td>${detailQty}</td>
                </tr>`;
            });

            tableBody.innerHTML = html;
          })
          .catch(err => {
            console.error(err);
            tableBody.innerHTML = `<tr><td colspan="5" class="text-center text-danger">Failed fetch data</td></tr>`;
          });
      });
    });
  });
</script>


<script>
  let detailModal = document.getElementById('detailModal');

  detailModal.addEventListener('show.bs.modal', function (event) {
    let button = event.relatedTarget;

    let id = button.getAttribute('data-id');
    if (!id) {
      console.warn("ID not found!.");
      return;
    }

    this.querySelector('#id').value = id;
    this.querySelector('#pgrpno').value = button.getAttribute('data-pgrpno') || '';
    this.querySelector('#purno').value = button.getAttribute('data-purno') || '';
    this.querySelector('#storeh').value = button.getAttribute('data-storeh') || '';
    this.querySelector('#sheft').value = button.getAttribute('data-sheft') || '';
    this.querySelector('#typ').value = button.getAttribute('data-typ') || '';
    this.querySelector('#vendno').value = button.getAttribute('data-vendno') || '';
    this.querySelector('#style').value = button.getAttribute('data-style') || '';
    this.querySelector('#itncna').value = button.getAttribute('data-itncna') || '';
    this.querySelector('#scolor').value = button.getAttribute('data-scolor') || '';
    this.querySelector('#unit').value = button.getAttribute('data-unit') || '';

    console.log("Fetching detail for ID:", id);
    fetch(`/api/staging/detail/${id}`)
      .then(res => res.json())
      .then(data => {
        const tableBody = document.getElementById('detailTableBody');
        tableBody.innerHTML = ''; 

        if (data.maxInQty && data.maxInDate) {
          const rowIn = document.createElement('tr');
          rowIn.innerHTML = `
            <td>${new Date(data.maxInDate).toLocaleDateString()}</td>
            <td>${data.storehIn || '-'}</td>
            <td>IN</td>
            <td>${data.maxInQty}</td>
          `;
          tableBody.appendChild(rowIn);
        }else{
          const rowIn = document.createElement('tr');
          rowIn.innerHTML = `
            <td>N/A</td>
            <td>N/A</td>
            <td>N/A</td>
            <td>N/A</td>
          `;
          tableBody.appendChild(rowIn);
        }

        if (data.maxOutQty && data.maxOutDate) {
          const rowOut = document.createElement('tr');
          rowOut.innerHTML = `
            <td>${new Date(data.maxOutDate).toLocaleDateString()}</td>
            <td>${data.storehOut || '-'}</td>
            <td>OUT</td>
            <td>${data.maxOutQty}</td>
          `;
          tableBody.appendChild(rowOut);
        }else{
          const rowOut = document.createElement('tr');
          rowOut.innerHTML = `
            <td>N/A</td>
            <td>N/A</td>
            <td>N/A</td>
            <td>N/A</td>
          `;
          tableBody.appendChild(rowOut);
        }

        if (!data.maxInQty && !data.maxOutQty) {
          tableBody.innerHTML = `<tr><td colspan="5" class="text-center">No data found!</td></tr>`;
        }

      })
      .catch(error => {
        console.error('Error fetching data:', error);
        document.getElementById('detailTableBody').innerHTML =
          `<tr><td colspan="5" class="text-center text-danger">Failed to fetch!</td></tr>`;
      });
  });
</script>


