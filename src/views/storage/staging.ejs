<section class="content">
  <div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h1 class="mb-0">Staging Data</h1>
      <a href="/storage/pull-hpsystem" class="btn btn-success">
        ðŸ”„ Pull Data HPSystem
      </a>
    </div>

    <form method="GET" class="mb-3">
      <div class="row align-items-center">
        <div class="col-md-4 mb-2">
          <input
            type="text"
            name="search"
            value="<%= typeof search !== 'undefined' ? search : '' %>"
            class="form-control"
            placeholder="Search Item Name / Kind / Style..."
          />
        </div>
        <div class="col-auto mb-2">
          <button type="submit" class="btn btn-primary">Search</button>
        </div>
        <div class="col-auto mb-2">
          <a href="?" class="btn btn-secondary">Reset</a>
        </div>
      </div>
    </form>

    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>#</th>
          <th>Purchase No</th>
          <th>Style</th>
          <th>Item Name</th>
          <th>Stock Qty</th>
          <th>In Qty</th>
          <th>Out Qty</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (stages.length === 0) { %>
          <tr>
            <td colspan="13" style="text-align: center;">No data found</td>
          </tr>
        <% } else { %>
        <% stages.forEach((item, i) => { %>
          <tr>
            <td><%= (currentPage - 1) * 100 + i + 1 %></td>
            <td><%= item.purno %></td>
            <td><%= item.style %></td>
            <td><%= item.itncna %></td>
            <td><%= item.sqty %></td>
            <td><%= item.totalIqty  %></td>
            <td><%= item.totalOqty  %></td>
            <td>
              <div class="d-flex flex-column gap-3">
                <div class="d-flex justify-content-between gap-1">
                  <a href="#" class="badge bg-primary text-decoration-none p-2 w-100 text-center m-1"
                    data-bs-toggle="modal"
                    data-bs-target="#qty2Modal"
                    data-id="<%= item.id %>">Qty in</a>
                  <a href="#" class="badge bg-primary text-decoration-none p-2 w-100 text-center m-1"
                    data-bs-toggle="modal"
                    data-bs-target="#oqtyModal"
                    data-id="<%= item.id %>">Qty out</a>
                </div>
                <div class="d-flex justify-content-between gap-1">
                  <a href="#" 
                    class="badge bg-warning text-dark text-decoration-none p-2 w-100 text-center m-1"
                    data-bs-toggle="modal" 
                    data-bs-target="#detailModal"
                    data-id="<%= item.id %>"
                    data-pgrpno="<%= item.pgrpno %>"
                    data-purno="<%= item.purno %>"
                    data-storeh="<%= item.storeh %>"
                    data-sheft="<%= item.sheft %>"
                    data-typ="<%= item.typ %>"
                    data-vendno="<%= item.vendno %>"
                    data-style="<%= item.style %>"
                    data-itncna="<%= item.itncna %>"
                    data-scolor="<%= item.scolor %>"
                    data-unit="<%= item.unit %>"
                    >Detail</a>
                  <a href="#" 
                    class="badge bg-secondary text-dark text-decoration-none p-2 w-100 text-center m-1 logs-btn"
                    data-bs-toggle="modal" 
                    data-bs-target="#logModal"
                    data-id="<%= item.id %>">Log Qty</a>
                </div>
              </div>
            </td>
          </tr>
         <% }) %>
        <% } %>
      </tbody>
    </table>

    <!-- Out Qty Modal -->
    <div class="modal fade" id="oqtyModal" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog">
        <form id="oqtyForm" method="POST">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">Stock Out Qty</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
              <input type="hidden" id="modaloqtyId" name="id" />
              <div class="mb-3">
                <label for="oqty" class="form-label">Qty Out</label>
                <input
                  type="number"
                  class="form-control"
                  id="oqty"
                  name="oqty"
                  value="0"
                  required
                />
              </div>

              <!-- âœ… Tambahan Input ID Card Number -->
              <div class="mb-3">
                <label for="idcard" class="form-label">ID Card Number</label>
                <input
                  type="text"
                  class="form-control"
                  id="idcard"
                  name="idcard"
                  placeholder="Enter ID Card Number"
                  required
                />
              </div>

                        <!-- âœ… Tambahan Input Name -->
              <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input
                  type="text"
                  class="form-control"
                  id="name"
                  name="name"
                  placeholder="PIC Name"
                  readonly
                />
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </div>
        </form>
      </div>
    </div>


    <!-- In Qty Modal-->
    <div class="modal fade" id="qty2Modal" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog">
        <form id="qty2Form" method="POST">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">Stock In Qty</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
              <input type="hidden" id="modalQty2Id" name="id" />
              <input type="number" class="form-control" name="iqty" value="0" required />
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </div>
        </form>
      </div>
    </div>

    <!-- Detail Qty -->
    <div class="modal fade" id="detailModal" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Detail</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
          <div class="modal-body">
              <input type="hidden" class="form-control" id="id" name="id">              
              <div class="row mb-2">
                <div class="col-md-6">
                  <label for="pgrpno" class="form-label">Pgrpno</label>
                  <input type="text" class="form-control" id="pgrpno" name="pgrpno" readonly>
                </div>
                <div class="col-md-6">
                  <label for="purno" class="form-label">Purchase No</label>
                  <input type="text" class="form-control" id="purno" name="purno" readonly>
                </div>
              </div>
              <div class="row mb-2">
                <div class="col-md-6">
                  <label for="storeh" class="form-label">Storeh</label>
                  <input type="text" class="form-control" id="storeh" name="storeh" readonly>
                </div>
                <div class="col-md-6">
                  <label for="sheft" class="form-label">Sheft</label>
                  <input type="text" class="form-control" id="sheft" name="sheft" readonly>
                </div>
              </div>
              <div class="row mb-2">
                <div class="col-md-6">
                  <label for="typ" class="form-label">Type</label>
                  <input type="text" class="form-control" id="typ" name="typ" readonly>
                </div>
                <div class="col-md-6">
                  <label for="vendno" class="form-label">Vendor</label>
                  <input type="text" class="form-control" id="vendno" name="vendno" readonly>
                </div>
              </div>
              <div class="row mb-2">
                <div class="col-md-6">
                  <label for="style" class="form-label">Style</label>
                  <input type="text" class="form-control" id="style" name="style" readonly>
                </div>
                <div class="col-md-6">
                  <label for="itncna" class="form-label">Style Desc</label>
                  <input type="text" class="form-control" id="itncna" name="itncna" readonly>
                </div>
              </div>
              <div class="row mb-2">
                <div class="col-md-6">
                  <label for="scolor" class="form-label">Size Color</label>
                  <input type="text" class="form-control" id="scolor" name="scolor" readonly>
                </div>
                <div class="col-md-6">
                  <label for="unit" class="form-label">Unit</label>
                  <input type="text" class="form-control" id="unit" name="unit" readonly>
                </div>
              </div>

            <hr>
            <table class="table table-bordered table-striped mt-3">
              <h5>Top I/O Qty</h5>
              <thead class="table-light">
                <tr>
                  <th>Date</th>
                  <th>Storeh</th>
                  <th>Kind</th>
                  <th>Qty</th>
                </tr>
              </thead>
              <tbody id="detailTableBody">
              </tbody>
            </table>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Tutup</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Log Qty -->
    <div class="modal fade" id="logModal" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Stok Detail</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
          <div class="modal-body">
            <table class="table table-bordered table-striped">
              <thead class="table-light">
                <tr>
                  <th>No</th>
                  <th>Date</th>
                  <th>Storeh</th>
                  <th>Kind</th>
                  <th>Qty</th>
                  <th>Remark</th>
                </tr>
              </thead>
              <tbody id="logTableBody">
                <tr><td colspan="5" class="text-center">Loading data...</td></tr>
              </tbody>
            </table>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Pagination -->
    <nav aria-label="Page navigation" class="mt-3">
      <ul class="pagination justify-content-center">

        <% if (currentPage > 1) { %>
          <li class="page-item">
            <a class="page-link" href="?page=<%= currentPage - 1 %>">Â« Prev</a>
          </li>
        <% } else { %>
          <li class="page-item disabled">
            <span class="page-link">Â« Prev</span>
          </li>
        <% } %>

        <% 
          const pageLimit = 5;
          let startPage = Math.max(currentPage - Math.floor(pageLimit / 2), 1);
          let endPage = startPage + pageLimit - 1;
          if (endPage > totalPages) {
            endPage = totalPages;
            startPage = Math.max(endPage - pageLimit + 1, 1);
          }
        %>

        <% if (startPage > 1) { %>
          <li class="page-item"><a class="page-link" href="?page=1">1</a></li>
          <% if (startPage > 2) { %>
            <li class="page-item disabled"><span class="page-link">...</span></li>
          <% } %>
        <% } %>

        <% for (let i = startPage; i <= endPage; i++) { %>
          <li class="page-item <%= i === currentPage ? 'active' : '' %>">
            <a class="page-link" href="?page=<%= i %>"><%= i %></a>
          </li>
        <% } %>

        <% if (endPage < totalPages) { %>
          <% if (endPage < totalPages - 1) { %>
            <li class="page-item disabled"><span class="page-link">...</span></li>
          <% } %>
          <li class="page-item">
            <a class="page-link" href="?page=<%= totalPages %>"><%= totalPages %></a>
          </li>
        <% } %>

        <% if (currentPage < totalPages) { %>
          <li class="page-item">
            <a class="page-link" href="?page=<%= currentPage + 1 %>">Next Â»</a>
          </li>
        <% } else { %>
          <li class="page-item disabled">
            <span class="page-link">Next Â»</span>
          </li>
        <% } %>
      </ul>
    </nav>
  </div>
</section>

<!--Stock out modal -->
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const modal = document.getElementById('oqtyModal');
    const form = document.getElementById('oqtyForm');
    const hiddenIdInput = document.getElementById('modaloqtyId');

    document.querySelectorAll('[data-bs-target="#oqtyModal"]').forEach(button => {
      button.addEventListener('click', function () {
        const id = this.getAttribute('data-id');

        hiddenIdInput.value = id;

        form.action = `/storage/stock-out/${id}?_method=PATCH`;
      });
    });
  });
</script>

