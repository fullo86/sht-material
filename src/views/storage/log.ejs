<section class="content">
  <div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h1 class="mb-0">Storage Activity Log</h1>
      <a href="/storage" class="btn btn-secondary">← Back to Storage</a>
    </div>

    <!-- Form Pencarian -->
    <form method="GET" class="mb-3">
      <div class="row align-items-center">
        <div class="col-md-4 mb-2">
          <input
            type="text"
            name="search"
            value="<%= typeof search !== 'undefined' ? search : '' %>"
            class="form-control"
            placeholder="Search Username / IP / Activity..."
          />
        </div>
        <div class="col-auto mb-2">
          <button type="submit" class="btn btn-primary">Search</button>
        </div>
        <div class="col-auto mb-2">
          <a href="/storage/log" class="btn btn-secondary">Reset</a>
        </div>
      </div>
    </form>

    <!-- Tabel Log -->
    <table class="table table-bordered table-hover">
      <thead class="table-light">
        <tr>
          <th>#</th>
          <th>Username</th>
          <th>IP Address</th>
          <th>Activity</th>
          <th>Timestamp (MM-DD-YYYY)</th>
        </tr>
      </thead>
      <tbody>
        <% if (logs.length === 0) { %>
          <tr>
            <td colspan="5" class="text-center">No log data found.</td>
          </tr>
        <% } else { %>
          <% logs.forEach((log, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= log.Username %></td>
              <td><%= log.IPAddress %></td>
              <td><%= log.Activity %></td>
              <td><%= new Date(log.Timestamp).toLocaleString() %></td>
            </tr>
          <% }) %>
        <% } %>
      </tbody>
    </table>

    <!-- Pagination -->
    <nav aria-label="Log pagination" class="mt-3">
      <ul class="pagination justify-content-center">
        <% if (currentPage > 1) { %>
          <li class="page-item">
            <a class="page-link" href="?page=<%= currentPage - 1 %>&search=<%= search %>">« Prev</a>
          </li>
        <% } else { %>
          <li class="page-item disabled"><span class="page-link">« Prev</span></li>
        <% } %>

        <% for (let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= i === currentPage ? 'active' : '' %>">
            <a class="page-link" href="?page=<%= i %>&search=<%= search %>"><%= i %></a>
          </li>
        <% } %>

        <% if (currentPage < totalPages) { %>
          <li class="page-item">
            <a class="page-link" href="?page=<%= currentPage + 1 %>&search=<%= search %>">Next »</a>
          </li>
        <% } else { %>
          <li class="page-item disabled"><span class="page-link">Next »</span></li>
        <% } %>
      </ul>
    </nav>
  </div>
</section>
