  <style>
    .dots-loader {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 8px;
      margin-top: 100px;
    }

    .dot {
      width: 12px;
      height: 12px;
      background-color: #3498db;
      border-radius: 50%;
      animation: bounce 0.6s infinite alternate;
    }

    .dot:nth-child(2) {
      animation-delay: 0.2s;
    }

    .dot:nth-child(3) {
      animation-delay: 0.4s;
    }

    @keyframes bounce {
      to {
        transform: translateY(-15px);
        opacity: 0.5;
      }
    }
  </style>
</head>
