<section class="content">
  <div class="row py-3">
    <div class="col-md-12">
      <div class="card card-secondary">
        <div class="card-header mb-3">
          <h3 class="card-title">CHANGE PASSWORD</h3>
        </div>
        <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
          <div class="alert alert-danger">
            <ul class="mb-0">
              <% errors.forEach(error => { %>
                <li><%= error.msg %></li>
              <% }) %>
            </ul>
          </div>
        <% } %>        
        <form action="/user/account/change-password/<%= user.id %>?_method=PATCH" method="POST">
        <div class="card-body">
          <div class="form-row">
            <div class="form-group col-md-12">
              <label for="oldPswd">Old Password</label>
              <input type="password" id="oldPswd" name="oldPswd" class="form-control" required>
            </div>
            <div class="form-group col-md-12">
              <label for="newPswd">New Password</label>
              <input type="password" id="newPswd" name="newPswd" class="form-control" required>
            </div>
          
            <div class="form-group col-md-12">
              <label for="cfmPswd">Confirm Password</label>
              <input type="password" id="cfmPswd" name="cfmPswd" class="form-control" required>
            </div>
          </div>

          <div class="col-12 py-4">
            <button type="submit" class="btn btn-success float-right">Submit</button>
          </div>
        </div>
       </form>
      </div>
    </div>
  </div>
</section>

<% if (status && status[0] === "success") { %>
  <script>
    Swal.fire({
      title: 'Success!',
      text: "<%= msg[0] %>",
      icon: 'success',
      showConfirmButton: false,
      timer: 3000,
      timerProgressBar: true
    });
  </script>
  <% } %>

<% if (status && status[0] === "failed") { %>
  <script>
    Swal.fire({
      title: 'Failed!',
      text: "<%= msg[0] %>",
      icon: 'error',
      showConfirmButton: false,
      timer: 3000,
      timerProgressBar: true
    });
  </script>
<% } %>
