<section class="content">
  <div class="row py-3">
    <div class="col-md-12">
      <div class="card card-secondary">
        <div class="card-header">
          <h3 class="card-title">ACCOUNT SETTING</h3>
        </div>

        <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
          <div class="alert alert-danger">
            <ul class="mb-0">
              <% errors.forEach(error => { %>
                <li><%= error.msg %></li>
              <% }) %>
            </ul>
          </div>
        <% } %>

        <div class="card-body">
          <div class="row">
            <!-- Form Upload Gambar -->
            <div class="col-md-4 d-flex flex-column align-items-center">
              <img src="/<%= user.image %>" alt="User Image" class="img-fluid rounded mb-3">
              <form 
                action="/user/account/update/<%= user.id %>?_method=PATCH" 
                method="POST" 
                enctype="multipart/form-data" 
                id="formUploadImage"
                class="w-100 px-3"
              >
                <div class="form-group">
                  <label for="image">Upload New Image</label>
                  <div class="input-group">
                    <div class="custom-file">
                      <input type="file" class="custom-file-input" id="image" name="image" required>
                      <label class="custom-file-label" for="image">Choose file</label>
                    </div>
                  </div>
                </div>
              </form>
            </div>

            <!-- Form Data User -->
            <div class="col-md-8 mt-2">
              <form action="/user/account/update/<%= user.id %>?_method=PATCH" method="POST">
                <div class="row">
                  <div class="form-group col-md-12">
                    <label for="account">Account</label>
                    <input type="text" id="account" name="account" class="form-control" value="<%= user.account %>" disabled>
                  </div>
                  <div class="form-group col-md-12">
                    <label for="dept">Department</label>
                    <input type="text" id="dept" class="form-control" value="<%= user.dept ? (user.dept.dept_code + ' - ' + user.dept.dept_desc) : '' %>" disabled>
                  </div>

                  <div class="form-group col-md-12">
                    <label for="vname">Name</label>
                    <input type="text" id="vname" name="vname" class="form-control" value="<%= user.vname %>" placeholder="Full Name..." required>
                  </div>

                  <div class="form-group col-md-12">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" class="form-control" value="<%= user.email %>" placeholder="Email..." required>
                  </div>
                </div>

                <div class="col-12 py-4">
                  <button type="submit" class="btn btn-success float-right">Update Data</button>
                </div>
              </form>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>

  <% if (typeof query !== 'undefined' && query.status === 'success') { %>
    <script>
      Swal.fire({
        title: 'Success!',
        text: 'User updated successfully!',
        icon: 'success',
        showConfirmButton: false,
        timer: 5000,
        timerProgressBar: true
      });
    </script>
  <% } %>
</section>

<script>
  document.getElementById('image').addEventListener('change', function() {
    if (this.files.length > 0) {
      document.getElementById('formUploadImage').submit();
    }
  });
</script>
