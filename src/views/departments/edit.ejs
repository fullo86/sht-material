<section class="content">
  <div class="row py-3">
    <div class="col-md-12">
      <div class="card card-secondary">
        <div class="card-header">
          <h3 class="card-title">EDIT USER</h3>
        </div>
        <form action="/department/update/<%= dept.id %>?_method=PATCH" method="POST">
        <div class="card-body">
          <div class="form-group">
            <label for="dept_code">DEPT Code</label>
            <input type="text" id="dept_code" name="dept_code" class="form-control" value="<%= dept.dept_code %>" placeholder="Department Code..." required>
          </div>

          <div class="form-group">
            <label for="dept_desc">Dept Name</label>
            <input type="text" id="dept_desc" name="dept_desc" class="form-control" value="<%= dept.dept_desc %>" placeholder="Email..." required>
          </div>

          <div class="col-12 py-4">
            <a href="/departments" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-success float-right">Submit</button>
          </div>
        </div>
       </form>
      </div>
    </div>
  </div>
<% if (typeof query !== 'undefined' && query.status === 'success') { %>
<script>
  Swal.fire({
    title: 'Success!',
    text: 'Department updated successfully!',
    icon: 'success',
    showConfirmButton: false,
    timer: 5000,
    timerProgressBar: true
  });

  setTimeout(() => {
    window.location.href = '/departments';
  }, 5000);
</script>
<% } %>
</section>
